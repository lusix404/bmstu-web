@model CoffeeShops.ViewModels.UsersListViewModel

@{
    ViewData["Title"] = "Пользователи";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bg_color_style.css" />
    <link rel="stylesheet" href="~/css/header_container_style.css" />
    <link rel="stylesheet" href="~/css/logo_style.css" />
    <link rel="stylesheet" href="~/css/logout_button.css" />
    <style>
        .users-table-container {
            width: 95%;
            margin: 20px auto;
            color: #EDE7DD;
            font-size: 14px;
        }

        .users-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .users-table th, 
        .users-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #EDE7DD;
            vertical-align: middle;
        }

        .users-table th {
            font-weight: bold;
            background-color: rgba(94, 70, 61, 0.3);
            border: 1px solid #EDE7DD;
        }

        .login-column {
            width: 30%;
        }

        .bdate-column {
            width: 8%;
        }

        .email-column {
            width: 35%;
        }

        .role-column {
            width: 10%;
        }

        .actions-column {
            width: 15%;
        }

        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .action-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 14px;
            background-color: #EDE7DD;
            white-space: nowrap;
            text-align: center;
        }

        h2 {
            color: #EDE7DD;
            margin-bottom: 20px;
        }

        .button-group {
            display: flex;
            gap: 10px;
        }

        .back-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: #2c1c1a;
        }

        .upper-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 18px;
            background-color: #EDE7DD;
        }

        .fav-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: #b567b2;
        }

        .empty-actions {
            min-height: 1em;
        }
    </style>
</head>
<body>
    <div class="header-container">
        <div class="button-group">
            <a href="@Url.Action("Logout", "User")" class="back-btn">Выйти</a>
           @*  <a href="@Url.Action("GetAllCompanies", "Company")" class="back-btn">Назад</a> *@
            <a href="@Url.Action("GetAllDrinks", "Drink")" class="upper-btn">Список напитков</a>
            <a href="@Url.Action("GetAllCompanies", "Company")" class="upper-btn">Список сетей кофеен</a>
            <a href="@Url.Action("GetFavDrinks", "Drink")" class="fav-btn">Список избранных напитков</a>
            <a href="@Url.Action("GetFavCoffeeShops", "CoffeeShop")" class="fav-btn">Список избранных кофеен</a>
        </div>
    </div>
    <div class="users-table-container">
        <h2>Список пользователей:</h2>

        @if (Model.Users.Any())
        {
            <table class="users-table">
                <thead>
                    <tr>
                        <th class="login-column">Логин</th>
                        <th class="bdate-column">Дата рождения</th>
                        <th class="email-column">Электронная почта</th>
                        <th class="role-column">Роль</th>
                        <th class="actions-column">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td class="login-column">@user.Login</td>
                            <td class="bdate-column">@user.BirthDate.ToString("yyyy-MM-dd")</td>
                            <td class="email-column">@user.Email</td>
                            <td class="role-column">
                                @switch(user.Id_role)
                                {
                                    case 1:
                                        @:Обычный пользователь
                                        break;
                                    case 2:
                                        @:Модератор
                                        break;
                                    case 3:
                                        @:Администратор
                                        break;
                                }
                            </td>
                            <td class="actions-column">
                                <div class="action-buttons">
                                    @if (user.Id_role == 1)
                                    {
                                        <a href="@Url.Action("GiveModerRights", "User", new { id = user.Id_user })"
                                           class="action-btn">Выдать права модератора</a>
                                    }
                                    else if (user.Id_role == 2)
                                    {
                                        <a href="@Url.Action("TakeModerRights", "User", new { id = user.Id_user })"
                                           class="action-btn">Забрать права модератора</a>
                                    }
                                    else
                                    {
                                        <div class="empty-actions">&nbsp;</div>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>В системе нет других пользователей</p>
        }
    </div>
</body>
</html>